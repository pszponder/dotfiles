# Auto-start Hyprland on Arch Linux TTY1
if [ -z "$DISPLAY" ] && [ "$XDG_VTNR" = 1 ]; then
    # Check if running Arch Linux
    if [ -f /etc/os-release ]; then
        . /etc/os-release
        if [ "$ID" = "arch" ] && command -v Hyprland >/dev/null 2>&1; then
            exec Hyprland
        fi
    fi
fi