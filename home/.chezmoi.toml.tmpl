# =============================================================================
# Used to customize configuration when doing a `chezmoi init`.
#
# This template file will trigger prompts to fill-in machine-specific
# templateable values. The resulting file is then created at
# `~/.config/chezmoi/chezmoi.toml`
#
# {{- /* This file supports Go's text/template language. */}}
# =============================================================================

# {{- $gitUserName := promptString "Git username for the author/committer" }}
# {{- $gitUserEmail := promptString "Git email address for the author/committer" }}

# [data]
#     gitUserName = "{{ $gitUserName }}"
#     gitUserEmail = "{{ $gitUserEmail }}"

{{- /* Prompt for full name */ -}}
{{- $name := promptString "❔ What is your git username" -}}

{{- /* Prompt for email */ -}}
{{- $email := promptString "❔ What is your git email" | lower -}}

[data]
name = "{{ $name }}"
email = "{{ $email }}"