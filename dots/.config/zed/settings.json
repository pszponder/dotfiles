// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
    "show_edit_predictions": true,
    "edit_predictions": {
        "mode": "subtle",
        "copilot": {
            "proxy": null,
            "proxy_no_verify": null,
            "enterprise_uri": null
        },
        "enabled_in_text_threads": false
    },
    "icon_theme": "Zed (Default)",
    "ui_font_size": 16,
    "ui_font_family": "CaskaydiaCove Nerd Font",
    "ui_font_fallbacks": ["JetBrainsMono Nerd Font", "Zed Plex Mono"],
    "buffer_font_size": 16,
    "buffer_font_family": "CaskaydiaCove Nerd Font",
    "buffer_font_fallbacks": ["JetBrainsMono Nerd Font", "Zed Plex Mono"],
    "theme": {
        "mode": "dark",
        "light": "One Light",
        "dark": "One Dark"
    },
    // "base_keymap": "VSCode",
    "vim_mode": true,
    "vim": {
        "use_system_clipboard": "always",
        "highlight_on_yank_duration": 200,
        "use_smartcase_find": true,
        "toggle_relative_line_numbers": true
    },
    // Scroll the whole view if your cursor is less than 20 horizontal lines
    // away from either part of your file viewport.
    "vertical_scroll_margin": 20,
    "project_panel": {
        "dock": "right"
    },
    "agent": {
        "dock": "left"
    },
    "toolbar": {
        "breadcrumbs": true
    },
    "hide_mouse": "on_typing_and_movement",
    "tab_bar": {
        "show": true
    },
    // Rainbow indent
    "indent_guides": {
        "enabled": true,
        "coloring": "indent_aware"
    },
    // Word Wrap
    "wrap_guides": [88],
    "show_wrap_guides": true,
    "preferred_line_length": 88,
    "soft_wrap": "bounded",
    "scrollbar": {
        "show": "auto"
    },
    "terminal": {
        "shell": {
            "program": "/usr/bin/fish"
        },
        "toolbar": {
            "breadcrumbs": false
        }
    },
    "format_on_save": "on",
    "tabs": {
        "file_icons": true
    },
    "preview_tabs": {
        "enable_preview_from_file_finder": true
    },
    "tab_size": 4,
    "show_whitespaces": "boundary",
    "file_scan_inclusions": [".env"],
    "languages": {
        "Shell Script": {
            "format_on_save": "on",
            // "tab_size": 2,
            // "hard_tabs": false,
            "formatter": {
                "external": {
                    "command": "shfmt",
                    // Change `--indent 2` to match your preferred tab_size
                    "arguments": ["--filename", "{buffer_path}", "--indent", "4"]
                }
            }
        },
        "JSON": {
            "format_on_save": "on"
        },
        "Python": {
            "language_servers": ["pyright", "ruff"],
            "format_on_save": "on",
            "formatter": [
                {
                    "code_action": "source.organizeImports.ruff"
                },
                {
                    "code_action": "source.fixAll.ruff"
                },
                {
                    "language_server": {
                        "name": "ruff"
                    }
                }
            ]
        },
        "Markdown": {
            "format_on_save": "on",
            "remove_trailing_whitespace_on_save": true
        }
    },
    "lsp": {
        "omnisharp": {
            "binary": {
                "path": "/path/to/OmniSharp",
                "arguments": ["optional", "additional", "args", "-lsp"]
            }
        }
    }
}
